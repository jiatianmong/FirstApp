<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp">

	<ImageView
		android:id="@+id/iv_icon"
		android:layout_width="100dp"
		android:layout_height="80dp"
		android:layout_marginLeft="10dp"
		android:layout_centerVertical="true"
		android:scaleType="fitXY"
	    android:background="@mipmap/jiazai"
		/>
	<ImageView
		android:id="@+id/iv_author_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:scaleType="fitXY"
		android:src="@mipmap/author_name"
		android:layout_alignBottom="@+id/iv_icon" android:layout_alignLeft="@+id/tv_listtitle"
		android:layout_alignStart="@+id/tv_listtitle" android:layout_marginLeft="15dp"
		android:layout_marginStart="8dp"/>
	<TextView
		android:id="@+id/tv_author_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="author_name"
		android:textColor="#240356"
		android:textSize="10sp"
		android:layout_marginLeft="10dp"
		android:layout_above="@+id/view" android:layout_toRightOf="@+id/iv_author_name"
		android:layout_toEndOf="@+id/iv_author_name"/>
	<TextView
		android:id="@+id/tv_listtitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="15dp"
		android:layout_toRightOf="@id/iv_icon"
		android:ellipsize="end"
		android:lines="2"
		android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
		android:textColor="#1a0640"
		android:textSize="20sp"/>

	<TextView
		android:id="@+id/tv_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:paddingLeft="50dp"
		android:singleLine="true"
		android:layout_marginRight="20dp"
		android:text="2016-10-26 06:14" android:textColor="#800080"
		android:textSize="8sp"
		android:layout_above="@+id/view" android:layout_alignRight="@+id/view"
		android:layout_alignEnd="@+id/view"/>
	<View
		android:layout_width="wrap_content"
		android:layout_margin="10dp"
		android:padding="15dp"
		android:layout_height="1px"
		android:layout_alignParentBottom="true"
		android:layout_below="@id/iv_icon"
		android:background="#9540e7" android:id="@+id/view"/>
</RelativeLayout>