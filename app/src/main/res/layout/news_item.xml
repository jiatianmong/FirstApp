<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp">

	<ImageView
		android:id="@+id/iv_icon"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_marginLeft="10dp"
		android:layout_centerVertical="true"
		android:scaleType="fitXY"
		android:src="@mipmap/jiazai"/>

	<TextView
		android:id="@+id/tv_listtitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:layout_toRightOf="@id/iv_icon"
		android:ellipsize="end"
		android:lines="2"
		android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
		android:textColor="#000000"
		android:textSize="18sp"/>

	<TextView
		android:id="@+id/tv_utl"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/iv_icon"
		android:layout_alignLeft="@id/tv_listtitle"
		android:ellipsize="end"
		android:paddingLeft="50dp"
		android:singleLine="true"
		android:text="http://news.qq.com/a/20160602/013186.htm" android:textColor="#800080"
		android:textSize="8sp"
	/>

</RelativeLayout>